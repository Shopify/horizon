{%- doc -%}
  Renders the search action bar (inline search form).

  @param {string} [style] - The style of the search action.
  @param {string} [class] - Additional classes for the search action.

  @example
  {% render 'search', style: 'inline', class: 'custom-class' %}
{%- enddoc -%}

{% unless style == 'none' %}
  <div class="search-action{% if class != blank %} {{ class | strip }}{% endif %}">
    <form action="{{ routes.search_url }}" method="get" role="search" class="hz-header-search" style="margin:0">
      <input
        id="Search-In-Header"
        type="search"
        name="q"
        value="{{ search.terms | escape }}"
       placeholder="Searchâ€¦"
aria-label="Search"
        class="hz-header-search__input"
      >
      <input type="hidden" name="type" value="product,article,page">
      <button type="submit" class="hz-header-search__button">
        {{ 'icon-search.svg' | inline_asset_content }}
        <span class="visually-hidden">{{ 'general.search.search' | t }}</span>
      </button>
    </form>
  </div>
{% endunless %}

{% stylesheet %}
  .search-action {
    --search-border-radius: var(--style-border-radius-inputs);
    --search-border-width: var(--style-border-width-inputs);
    display: flex;
    flex-grow: 1;
  }

  .hz-header-search {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
  }

  .hz-header-search__input {
    flex: 1 1 auto;
    min-width: 140px;
    padding: 10px 12px;
    border: 1px solid var(--color-border, #ddd);
    border-radius: 999px;
    font: inherit;
  }

  .hz-header-search__button {
display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 12px;        /* give it some width */
  height: 40px;           /* match input height */
  border: none;           /* remove the circle border */
  background: none;       /* make it transparent */
  cursor: pointer;
}

  @media (max-width: 640px) {
    .hz-header-search__button {
      display: none;
    }
    .hz-header-search__input {
      border-radius: 10px;
    }
  }
{% endstylesheet %}

