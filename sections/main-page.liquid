
{% liquid
  assign golden_scheme = section.settings.golden_color_scheme | default: 'primary-honey'
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section page-width-content color-{{ section.settings.color_scheme }} color-scheme color-scheme--{{ golden_scheme }}">
  <div
    class="
      spacing-style
      layout-panel-flex
      layout-panel-flex--column
      section-content-wrapper
      mobile-column
    "
    style="
      {% render 'layout-panel-style', settings: section.settings %}
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    {% content_for 'blocks' %}
  </div>
</div>

{% schema %}
{
  "name": "t:names.page",
  "class": "section-wrapper",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    },
    {
      "type": "_divider"
    }
  ],
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "select",
      "id": "content_direction",
      "label": "t:settings.direction",
      "options": [
        {
          "value": "column",
          "label": "t:options.vertical"
        }
      ],
      "default": "column",
      "visible_if": "{{ section.settings.gap < 0 }}"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "golden_color_scheme",
      "label": "Color scheme (Golden palettes)",
      "default": "primary-honey",
      "options": [
        { "value": "primary-honey", "label": "Primary — Honey" },
        { "value": "core-black", "label": "Core — Black" },
        { "value": "core-white", "label": "Core — White" },
        { "value": "core-gray", "label": "Core — Gray" },
        { "value": "fruit-lemon", "label": "Fruit — Lemon" },
        { "value": "fruit-lime", "label": "Fruit — Lime" },
        { "value": "fruit-mandarin", "label": "Fruit — Mandarin" },
        { "value": "fruit-grapefruit", "label": "Fruit — Grapefruit" },
        { "value": "fruit-blackcurrant", "label": "Fruit — Blackcurrant" },
        { "value": "primary-honey-inverse", "label": "Primary — Honey (Inverse)" },
        { "value": "core-black-inverse", "label": "Core — Black (Inverse)" },
        { "value": "core-gray-inverse", "label": "Core — Gray (Inverse)" },
        { "value": "fruit-lemon-inverse", "label": "Fruit — Lemon (Inverse)" },
        { "value": "fruit-lime-inverse", "label": "Fruit — Lime (Inverse)" },
        { "value": "fruit-mandarin-inverse", "label": "Fruit — Mandarin (Inverse)" },
        { "value": "fruit-grapefruit-inverse", "label": "Fruit — Grapefruit (Inverse)" },
        { "value": "fruit-blackcurrant-inverse", "label": "Fruit — Blackcurrant (Inverse)" }
      ]
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ]
}
{% endschema %}
