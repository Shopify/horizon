{% doc %}
  @prompt
    Create a full-width hero splash section that appears above the header on page load.
    
    The section should display a single large background image or looping video (configurable via the theme editor) with support for responsive scaling across all devices.
    
    The site header/navigation bar should remain hidden while the hero splash is in view and fade or slide in only once the user scrolls past the hero section (use a smooth scroll-triggered transition).
    
    Add optional overlay text and logo positioning controls (center, top, or bottom alignment) and adjustable opacity and color overlays for better contrast on imagery.
    
    Ensure this section:
    • Loads before all other content, above the header.
    • Supports both static image and autoplay video backgrounds.
    • Has adjustable height (viewport %, min height, max height).
    • Maintains smooth performance and accessibility (no layout shift).
    • Integrates cleanly with Horizon theme typography and button styles.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-splash-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: {{ block.settings.height_desktop }}vh;
    min-height: {{ block.settings.min_height }}px;
    max-height: {{ block.settings.max_height }}px;
    z-index: 9999;
    overflow: hidden;
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.8s ease;
  }

  .ai-hero-splash-{{ ai_gen_id }}.hidden {
    transform: translateY(-100%);
    opacity: 0;
    pointer-events: none;
  }

  .ai-hero-splash-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-splash-video-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
  }

  .ai-hero-splash-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .ai-hero-splash-content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: {% if block.settings.content_alignment == 'top' %}flex-start{% elsif block.settings.content_alignment == 'bottom' %}flex-end{% else %}center{% endif %};
    justify-content: center;
    padding: 40px 20px;
    text-align: center;
    z-index: 2;
  }

  .ai-hero-splash-inner-{{ ai_gen_id }} {
    max-width: 800px;
    width: 100%;
  }

  .ai-hero-splash-logo-{{ ai_gen_id }} {
    margin-bottom: 30px;
  }

  .ai-hero-splash-logo-{{ ai_gen_id }} img {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
  }

  .ai-hero-splash-heading-{{ ai_gen_id }} {
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: {{ settings.type_heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
    text-transform: {% if block.settings.heading_uppercase %}uppercase{% else %}none{% endif %};
  }

  .ai-hero-splash-text-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    margin: 0 0 30px;
    opacity: 0.9;
  }

  .ai-hero-splash-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 15px 30px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-family: {{ settings.type_accent_font.family }}, {{ settings.type_accent_font.fallback_families }};
    font-weight: {{ settings.type_accent_font.weight }};
    font-size: 16px;
    text-decoration: none;
    text-transform: {% if block.settings.button_uppercase %}uppercase{% else %}none{% endif %};
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-hero-splash-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-hero-splash-scroll-indicator-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    animation: ai-hero-splash-bounce-{{ ai_gen_id }} 2s infinite;
  }

  .ai-hero-splash-scroll-text-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: 12px;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-hero-splash-scroll-arrow-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
  }

  @keyframes ai-hero-splash-bounce-{{ ai_gen_id }} {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  .ai-hero-splash-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-splash-placeholder-{{ ai_gen_id }} svg {
    width: 200px;
    height: 200px;
    opacity: 0.3;
  }

  .ai-hero-splash-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.8);
    font-size: 14px;
    text-align: center;
    background: rgba(0, 0, 0, 0.3);
    padding: 12px 20px;
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }

  body.ai-hero-splash-active-{{ ai_gen_id }} {
    overflow: hidden;
  }

  body.ai-hero-splash-active-{{ ai_gen_id }} .shopify-section-header {
    transform: translateY(-100%);
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  body.ai-hero-splash-hidden-{{ ai_gen_id }} .shopify-section-header {
    transform: translateY(0);
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media screen and (max-width: 749px) {
    .ai-hero-splash-{{ ai_gen_id }} {
      height: {{ block.settings.height_mobile }}vh;
    }

