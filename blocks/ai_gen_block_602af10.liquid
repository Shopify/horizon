      padding: 30px 15px;
    }

    .ai-hero-splash-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-splash-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-hero-splash-logo-{{ ai_gen_id }} img {
      max-width: {{ block.settings.logo_width | times: 0.8 }}px;
    }

    .ai-hero-splash-button-{{ ai_gen_id }} {
      padding: 12px 24px;
      font-size: 14px;
    }
  }
{% endstyle %}

<hero-splash-{{ ai_gen_id }}
  class="ai-hero-splash-{{ ai_gen_id }}"
  data-scroll-threshold="{{ block.settings.scroll_threshold }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.background_type == 'video' and block.settings.background_video %}
    <video
      class="ai-hero-splash-video-{{ ai_gen_id }}"
      autoplay
      muted
      loop
      playsinline
      preload="metadata"
    >
      <source src="{{ block.settings.background_video }}" type="video/mp4">
    </video>
  {% elsif block.settings.background_image %}
    <img
      src="{{ block.settings.background_image | image_url: width: 2000 }}"
      alt="{{ block.settings.background_image.alt | escape }}"
      class="ai-hero-splash-background-{{ ai_gen_id }}"
      loading="eager"
      width="{{ block.settings.background_image.width }}"
      height="{{ block.settings.background_image.height }}"
    >
  {% else %}
    <div class="ai-hero-splash-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-hero-splash-empty-state-{{ ai_gen_id }}">
        Add a background image or video to get started
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-hero-splash-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-splash-content-{{ ai_gen_id }}">
    <div class="ai-hero-splash-inner-{{ ai_gen_id }}">
      {% if block.settings.show_logo and block.settings.logo %}
        <div class="ai-hero-splash-logo-{{ ai_gen_id }}">
          <img
            src="{{ block.settings.logo | image_url: width: 400 }}"
            alt="{{ shop.name }}"
            loading="eager"
            width="{{ block.settings.logo.width }}"
            height="{{ block.settings.logo.height }}"
          >
        </div>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-splash-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h1>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-hero-splash-text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-hero-splash-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  {% if block.settings.show_scroll_indicator %}
    <div class="ai-hero-splash-scroll-indicator-{{ ai_gen_id }}">
      <div class="ai-hero-splash-scroll-text-{{ ai_gen_id }}">Scroll</div>
      <svg class="ai-hero-splash-scroll-arrow-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="6,9 12,15 18,9"></polyline>
      </svg>
    </div>
  {% endif %}
</hero-splash-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroSplash{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.scrollThreshold = parseInt(this.dataset.scrollThreshold) || 80;
        this.isHidden = false;
        this.hasScrolled = false;
      }

      connectedCallback() {
        this.setupInitialState();
        this.setupScrollListener();
        this.setupVideoOptimization();
        this.preventLayoutShift();
      }

      setupInitialState() {
        document.body.classList.add('ai-hero-splash-active-{{ ai_gen_id }}');
        
        const header = document.querySelector('.shopify-section-header');
        if (header) {
          header.style.transform = 'translateY(-100%)';
        }
      }

      setupScrollListener() {
        let ticking = false;
        
        const handleScroll = () => {
          if (!ticking) {
            requestAnimationFrame(() => {
              const scrollPercent = (window.scrollY / window.innerHeight) * 100;
              
              if (scrollPercent >= this.scrollThreshold && !this.isHidden) {
                this.hideHeroSplash();
              } else if (scrollPercent < this.scrollThreshold && this.isHidden) {
                this.showHeroSplash();
              }
              
              ticking = false;
            });
            ticking = true;
          }
        };

        window.addEventListener('scroll', handleScroll, { passive: true });
        
        window.addEventListener('resize', () => {
          if (!this.hasScrolled) {
            this.preventLayoutShift();
          }
        }, { passive: true });
      }

      hideHeroSplash() {
        this.isHidden = true;
        this.hasScrolled = true;
        this.classList.add('hidden');
        
        document.body.classList.remove('ai-hero-splash-active-{{ ai_gen_id }}');
        document.body.classList.add('ai-hero-splash-hidden-{{ ai_gen_id }}');
        
        setTimeout(() => {
          document.body.style.overflow = '';
        }, 800);
      }

      showHeroSplash() {
        this.isHidden = false;
        this.classList.remove('hidden');
        
        document.body.classList.add('ai-hero-splash-active-{{ ai_gen_id }}');
        document.body.classList.remove('ai-hero-splash-hidden-{{ ai_gen_id }}');
        document.body.style.overflow = 'hidden';
      }

      setupVideoOptimization() {
        const video = this.querySelector('.ai-hero-splash-video-{{ ai_gen_id }}');
        if (video) {
          video.addEventListener('loadeddata', () => {
            video.style.opacity = '1';
          });

          const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                video.play().catch(() => {});
              } else {
                video.pause();
              }
            });
          });
          
          observer.observe(this);
        }
      }

      preventLayoutShift() {
        const mainContent = document.querySelector('main');
        if (mainContent && !this.hasScrolled) {
          const heroHeight = this.offsetHeight;
          mainContent.style.marginTop = `${heroHeight}px`;
          
          const observer = new MutationObserver(() => {
            if (this.isHidden) {
              mainContent.style.marginTop = '0';
              observer.disconnect();
            }
          });
          
          observer.observe(this, { attributes: true, attributeFilter: ['class'] });
        }
      }

      disconnectedCallback() {
        document.body.classList.remove('ai-hero-splash-active-{{ ai_gen_id }}', 'ai-hero-splash-hidden-{{ ai_gen_id }}');
        document.body.style.overflow = '';
        
        const mainContent = document.querySelector('main');
        if (mainContent) {
          mainContent.style.marginTop = '0';
        }
      }
    }

    customElements.define('hero-splash-{{ ai_gen_id }}', HeroSplash{{ ai_gen_id }});
  })();
</script>

