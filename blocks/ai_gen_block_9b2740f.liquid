<hover-accordion-{{ ai_gen_id }}
  class="ai-hover-accordion-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% for i in (1..5) %}
    {% liquid
      assign left_text_key = 'row_' | append: i | append: '_left_text'
      assign right_text_key = 'row_' | append: i | append: '_right_text'
      assign content_key = 'row_' | append: i | append: '_content'
      assign enabled_key = 'row_' | append: i | append: '_enabled'

      assign left_text = block.settings[left_text_key]
      assign right_text = block.settings[right_text_key]
      assign content = block.settings[content_key]
      assign enabled = block.settings[enabled_key]
    %}

    {% if enabled and left_text != blank %}
      <div class="ai-hover-accordion-item-{{ ai_gen_id }}" data-row="{{ i }}">
        <div class="ai-hover-accordion-header-{{ ai_gen_id }}">
          <div class="ai-hover-accordion-left-text-{{ ai_gen_id }}">
            {{ left_text }}
          </div>
          {% if right_text != blank %}
            <div class="ai-hover-accordion-right-text-{{ ai_gen_id }}">
              {{ right_text }}
            </div>
          {% endif %}
        </div>
        {% if content != blank %}
          <div class="ai-hover-accordion-content-{{ ai_gen_id }}">
            <div class="ai-hover-accordion-content-inner-{{ ai_gen_id }}">
              {{ content }}
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}
  {% endfor %}
</hover-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    class HoverAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.items = this.querySelectorAll('.ai-hover-accordion-item-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.items.forEach((item) => {
          const content = item.querySelector('.ai-hover-accordion-content-{{ ai_gen_id }}');
          
          if (content) {
            item.addEventListener('mouseenter', () => {
              this.expandItem(item);
            });

            item.addEventListener('mouseleave', () => {
              this.collapseItem(item);
            });
          }
        });
      }

      expandItem(item) {
        const content = item.querySelector('.ai-hover-accordion-content-{{ ai_gen_id }}');
        if (content) {
          const contentInner = content.querySelector('.ai-hover-accordion-content-inner-{{ ai_gen_id }}');
          content.style.maxHeight = contentInner.scrollHeight + 'px';
        }
      }

      collapseItem(item) {
        const content = item.querySelector('.ai-hover-accordion-content-{{ ai_gen_id }}');
        if (content) {
          content.style.maxHeight = '0px';
        }
      }
    }

    customElements.define('hover-accordion-{{ ai_gen_id }}', HoverAccordion{{ ai_gen_id }});
  })();
</script>

